@model CustomerModel
<p class="text-gray" style="text-align:center; font-size:larger;font-weight:bold">@ViewBag.FormTitle</p>
<section class="section">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    
                    <h5 class="card-title">General Form Elements</h5>
                    <span class="align-middle">
                        
                        <!-- General Form Elements -->
                        <form class="align-middle" method="post" asp-controller="Customer" asp-action="SaveCust">
                            <div class="row mb-3">
                                <div class="col-sm-10">
                                    <input type="hidden" asp-for="CustomerId" class="form-control">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="inputEmail" class="col-sm-4 col-form-label">
                                    <span class="text-danger">*</span> Email
                                </label>
                                <div class="col-sm-10">
                                    <input type="email" asp-for="Email" class="form-control">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-4 col-form-label">
                                    <span class="text-danger">*</span> Customer Name
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="CustomerName" class="form-control">
                                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-4 col-form-label">
                                    <span class="text-danger">*</span> Home Address
                                </label>
                                <div class="col-sm-10">
                                    <textarea asp-for="HomeAddress" class="form-control"></textarea>
                                    <span asp-validation-for="HomeAddress" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="inputNumber" class="col-sm-4 col-form-label">
                                    <span class="text-danger">*</span> Mobile No
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="MobileNo" class="form-control">
                                    <span asp-validation-for="MobileNo" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-4 col-form-label">
                                    <span class="text-danger">*</span> GST No
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="GSTNo" class="form-control">
                                    <span asp-validation-for="GSTNo" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-4 col-form-label">
                                    <span class="text-danger">*</span> City Name
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="CityName" class="form-control">
                                    <span asp-validation-for="CityName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-4 col-form-label">
                                    <span class="text-danger">*</span> Pincode No
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="PinCode" class="form-control">
                                    <span asp-validation-for="PinCode" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="inputNumber" class="col-sm-4 col-form-label">
                                    <span class="text-danger">*</span> Net Amount
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="NetAmount" class="form-control">
                                    <span asp-validation-for="NetAmount" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label class="col-sm-4 col-form-label">
                                    <span class="text-danger">*</span> Select User
                                </label>
                                <div class="col-sm-10">
                                    <select class="form-control" asp-for="UserId" asp-items="@(new SelectList(ViewBag.UserList, "UserID", "UserName"))">
                                        <option value="">Select user</option>
                                    </select>
                                    <span asp-validation-for="UserId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label class="col-sm-4 col-form-label">Submit Button</label>
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Submit Form</button>
                                </div>
                            </div>
                        </form>
                    </span>
                </div>
            </div>
        </div>
</section>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}