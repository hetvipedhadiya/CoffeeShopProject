@model BillsModel
<p class="text-gray" style="text-align:center; font-size:larger;font-weight:bold">@ViewBag.FormTitle</p>
<section class="section">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    
                    <h5 class="card-title">General Form Elements</h5>
                    <span class="align-middle">
                        <form method="post" asp-controller="Bills" asp-action="SaveBill">
                            <div class="row mb-3">
                                <input type="hidden" asp-for="BillId" class="form-control">
                            </div>

                            <div class="row mb-3">
                                <label for="inputNumber" class="col-sm-4 col-form-label">
                                    <span class="text-danger">*</span> Bill Number
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="BillNumber" class="form-control">
                                    <span asp-validation-for="BillNumber" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="inputDate" class="col-sm-4 col-form-label">
                                    <span class="text-danger">*</span> Bill Date
                                </label>
                                <div class="col-sm-10">
                                    <input type="date" asp-for="BillDate" class="form-control">
                                    <span asp-validation-for="BillDate" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="inputNumber" class="col-sm-4 col-form-label">
                                    <span class="text-danger">*</span> Total Amount
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="TotalAmount" class="form-control">
                                    <span asp-validation-for="TotalAmount" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="inputNumber" class="col-sm-4 col-form-label">
                                    <span class="text-danger">*</span> Discount
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="Discount" class="form-control">
                                    <span asp-validation-for="Discount" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="inputNumber" class="col-sm-4 col-form-label">
                                    <span class="text-danger">*</span> Net Amount
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="NetAmount" class="form-control">
                                    <span asp-validation-for="NetAmount" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">
                                    <span class="text-danger">*</span> Select User
                                </label>
                                <div class="col-sm-10">
                                    <select class="form-control" asp-for="UserId" asp-items="@(new SelectList(ViewBag.UserList, "UserID", "UserName"))">
                                        <option value="">Select user</option>
                                    </select>
                                    <span asp-validation-for="UserId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">
                                    <span class="text-danger">*</span> Select Order
                                </label>
                                <div class="col-sm-10">
                                    <select class="form-control" asp-for="OrderID">
                                        <option value="">Select Order</option>
                                        @foreach (var order in ViewBag.OrderList)
                                        {
                                            <option value="@order.OrderID">@order.OrderNumber</option>
                                        }
                                    </select>
                                    <span asp-validation-for="OrderID" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Submit Button</label>
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Submit Form</button>
                                </div>
                            </div>

                        </form>
                    </span>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
