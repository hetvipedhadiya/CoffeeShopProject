@model OrderDetail
<p class="text-gray" style="text-align:center; font-size:larger;font-weight:bold">@ViewBag.FormTitle</p>
<section class="section">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">General Form Elements</h5>
                    <span class="align-middle">
                        <!-- General Form Elements -->
                        <form class="align-middle" method="post" asp-controller="OrderDetail" asp-action="Save">
                            <div class="row mb-3">
                                <div class="col-sm-10">
                                    <input type="hidden" asp-for="OrderDetailID" class="form-control">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-4 col-form-label">
                                    <span class="text-danger">*</span> Quantity
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="Quantity" class="form-control">
                                    <span asp-validation-for="Quantity" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="inputNumber" class="col-sm-4 col-form-label">
                                    <span class="text-danger">*</span>Amount
                                </label>
                                <div class="col-sm-10">
                                    <input type="number" asp-for="Amount" class="form-control" step="any">
                                    <span asp-validation-for="Amount" class="text-danger"></span>
                                </div>
                            </div>


                            <div class="row mb-3">
                                <label for="inputNumber" class="col-sm-4 col-form-label">
                                    <span class="text-danger">*</span>Total  Amount
                                </label>
                                <div class="col-sm-10">
                                    <input type="number" asp-for="TotalAmount" class="form-control" step="any">
                                    <span asp-validation-for="TotalAmount" class="text-danger"></span>
                                </div>
                            </div>


                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">
                                    <span class="text-danger">*</span> Select Order
                                </label>
                                <div class="col-sm-10">
                                    <select class="form-control" asp-for="OrderID">
                                        <option value="">Select Order</option>
                                        @foreach (var order in ViewBag.OrderList)
                                        {
                                            <option value="@order.OrderID">@order.OrderNumber</option>
                                        }
                                    </select>
                                    <span asp-validation-for="OrderID" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">
                                    <span class="text-danger">*</span> Select User
                                </label>
                                <div class="col-sm-10">
                                    <select class="form-control" asp-for="UserId" asp-items="@(new SelectList(ViewBag.UserList, "UserID", "UserName"))">
                                        <option value="">Select User</option>
                                    </select>
                                    <span asp-validation-for="UserId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">
                                    <span class="text-danger">*</span> Select Product
                                </label>
                                <div class="col-sm-10">
                                    <select class="form-control" asp-for="ProductID">
                                        <option value="">Select Product</option>
                                        @foreach (var product in ViewBag.ProductList)
                                        {
                                            <option value="@product.ProductID">@product.ProductName</option>
                                        }
                                    </select>
                                    <span asp-validation-for="ProductID" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Submit Button</label>
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Submit Form</button>
                                </div>
                            </div>

                        </form><!-- End General Form Elements -->
                    </span>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
